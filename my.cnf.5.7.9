#
# config file for mysql 5.7.9
#
[client]
port            = 3306
socket          = /var/run/mysqld/mysqld.sock

[mysqld]
server-id       = 1
pid-file        = /var/run/mysqld/mysqld.pid
socket          = /var/run/mysqld/mysqld.sock
port            = 3306
basedir         = /usr/local/mysql
datadir         = /mnt/data/mysql
tmpdir          = /tmp
sql_mode=NO_ENGINE_SUBSTITUTION,NO_AUTO_CREATE_USER,STRICT_TRANS_TABLES
max_connections=1024
wait_timeout=300                                                   #
interactive_timeout= 300                                           #
max_connect_errors=10000
group_concat_max_len=2048                                          #
open_files_limit=8192
skip_external_locking
skip_name_resolve
max_allowed_packet=32M                                             #
thread_cache_size=20
thread_stack=192K
transaction-isolation = REPEATABLE-READ
tmp_table_size=124M                                                  #
lower_case_table_names=1
log_bin_trust_function_creators=1

##############MYISAM
bulk_insert_buffer_size=64M
myisam_sort_buffer_size=128M
myisam_max_sort_file_size=10G
myisam_repair_threads=1
#myisam_recover

########log
log_error=/mnt/log/mysql/error.log
slow_query_log=1                                                    #?
long_query_time=1                                                   #??
slow_query_log_file=/mnt/log/mysql/mysql_slow.log
log_bin=/mnt/log/mysql/binlog/mysql-bin.log
binlog_cache_size=8M
binlog_format=MIXED
max_binlog_cache_size=1024M
max_binlog_size=1024M
sync_binlog=1
expire_logs_days=15

##########
key_buffer_size=512M                                                ##
read_buffer_size=8M                                                 ##
read_rnd_buffer_size=16M
join_buffer_size=16M                                                ##join buffer
sort_buffer_size=16M                                                ##
max_heap_table_size=123M

##########language
init_connect='SET NAMES utf8'
character_set_server='utf8'
#character_set_client='utf8'

#########innodb
innodb_file_per_table=1
#innodb_open_file=1678
innodb_open_files=65535                                              #innodb
innodb_purge_threads=0
innodb_purge_batch_size=20
innodb_io_capacity=200
innodb_adaptive_flushing=on
innodb_change_buffering=all
innodb_stats_on_metadata=off
innodb_spin_wait_delay=6
innodb_buffer_pool_instances=12
#innodb_additional_mem_pool_size=16M
innodb_buffer_pool_size=4096M                                      #innodb buffer
innodb_sort_buffer_size=4M
innodb_data_file_path=ibdata1:12M:autoextend
innodb_autoextend_increment=8M
innodb_read_io_threads=16
innodb_write_io_threads=16
innodb_thread_concurrency=0
innodb_replication_delay=0
innodb_flush_log_at_trx_commit=2
#innodb_log_buffer_size=256M
innodb_log_buffer_size=32M                                           #inondb
innodb_log_file_size=256M
#innodb_log_file_size=1024M                                          #innodb
innodb_log_files_in_group=2
innodb_max_dirty_pages_pct=85
#innodb_log_group_home_dir=
innodb_lock_wait_timeout=300

[mysqldump]
quick
quote-names
max_allowed_packet      = 16M
